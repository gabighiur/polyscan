: block; /* Hide images */\r\n    }\r\n\r\n    .slider-video {\r\n        object-fit: cover;\r\n    }\r\n\r\n    .slider-controls {\r\n        display: flex;\r\n        justify-content: space-between;\r\n        align-items: center;\r\n        margin-top: 10px;\r\n    }\r\n\r\n    .slider-prev,\r\n    .slider-next {\r\n        background: none;\r\n        border: none;\r\n        color: #fff;\r\n        font-size: 24px;\r\n        cursor: pointer;\r\n    }\r\n\r\n    /* Add any additional styling as needed */\r\n</style>\r\n"],"mappings":"AAuBI,eAAe;EACXA,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,KAAK,EAAE,CACH;QACIC,IAAI,EAAE,OAAO;QACbC,GAAG,EAAEC,OAAO,CAAC,+BAA+B;MAChD,CAAC,EACD;QACIF,IAAI,EAAE,OAAO;QACbC,GAAG,EAAEC,OAAO,CAAC,+BAA+B,CAAC;QAC7CC,IAAI,EAAE;MACV,CAAC,EACD;QACIH,IAAI,EAAE,OAAO;QACbC,GAAG,EAAEC,OAAO,CAAC,+BAA+B,CAAC;QAC7CC,IAAI,EAAE;MACV,CAAC,CACJ;MACDC,YAAY,EAAE;IAClB,CAAC;EACL,CAAC;EACDC,OAAO,EAAE;IACLC,QAAQA,CAAA,EAAG;MACP,IAAI,CAACF,YAAW,GAAI,CAAC,IAAI,CAACA,YAAW,GAAI,IAAI,IAAI,CAACL,KAAK,CAACQ,MAAM,IAAI,IAAI,CAACR,KAAK,CAACQ,MAAM;IACvF,CAAC;IACDC,QAAQA,CAAA,EAAG;MACP,IAAI,CAACJ,YAAW,GAAI,CAAC,IAAI,CAACA,YAAW,GAAI,CAAC,IAAI,IAAI,CAACL,KAAK,CAACQ,MAAM;IACnE;EACJ;AACJ,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}